{% extends "::base.html.twig" %}

{% block body %}
<!-- 1st Content Box -->
<div class="col-lg-12 pull-left content_box">

<!-- BreadCrumb -->
<ol class="breadcrumb">
    <li class="active">Users</li>
</ol>
<!-- End BreadCrumb -->

<div class="clearfix"></div>

<!-- MOST RATED SECTION -->
<div class="col-lg-12 tab_section">
    <div class="col-lg-12 well">

        {{ knp_pagination_render(users) }}

        <!-- Start list -->
        <table class="table">
            <tr>
                <th>#</th>
                <th>Avatar</th>
                <th>Nickname</th>
                <th>Joined Loop</th>
                <th>Following</th>
                <th>Watched</th>
            </tr>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>
                    <a class="thumbnail" href="{{ path("loopanime_users_user",{idUser: user.id}) }}">
                    <img src="{{ user.avatar }}" width="50px" height="50px">
                    </a>
                </td>
                <td><a href="{{ path("loopanime_users_user",{idUser: user.id}) }}">{{ user.username }}</a></td>
                <td>{{ user.createTime }}</td>
                {% if user.preferences.publicProfile %}
                    <td>{{ user.totFav }}</td>
                    <td>{{ user.totSeen }}</td>
                {% else %}
                    <td colspan="2"><span class="label label-primary">User Profile is Private</span></td>
                {% endif %}
            </tr>
            {% endfor %}
        </table>
        <!-- End list  -->

        {{ knp_pagination_render(users) }}

    </div>
</div>

</div>
<!-- End 1st Content Box -->
{% endblock %}