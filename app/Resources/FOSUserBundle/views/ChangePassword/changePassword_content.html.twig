<div class="col-lg-12">
    <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal">

        <div class="clearfix"></div>

        <div class="col-sm-12 text-center" style="padding-bottom: 40px;"><h1>Change Password</h1></div>

        <div class="clearfix"></div>

        <div class="form-group">
            <label class="col-md-4 text-right">{{ form_label(form.current_password) }}</label>
            <div class="col-md-8">
                {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control input-small'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 text-right">{{ form_label(form.new.first) }}</label>
            <div class="col-md-8">
                {{ form_widget(form.new.first, {'attr' : {'class' : 'form-control input-small'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 text-right">Re-type your password:</label>
            <div class="col-md-8">
                {{ form_widget(form.new.second, {'attr' : {'class' : 'form-control input-small'}}) }}
            </div>
        </div>

        <div class="col-lg-10 col-offset-1 text-right">
            <input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>

    </form>
</div>
