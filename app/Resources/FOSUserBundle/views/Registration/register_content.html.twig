<div class="col-lg-12 text-center"><h4 class="text-center">Sign Up - Loop Anime</h4></div>
        <br>

        <br>
        <div class="col-lg-8 col-offset-2">
            <p><small>If you already signed up but didn't receive any email from us nor didn't validate your e-mail please click <a href="confirm.php"><b>HERE</b></a> to resend a validation e-mail nor validate it. </small></p>

            {% spaceless %}
                {% if not form.vars.valid %}
                    <div class="alert alert-danger">
                        The follow errors just happened:<br>
                        {{ form_errors(form) }}
                        {% for children in form.children %}
                            {% if not children.vars.valid %}
                                {{ form_errors(children) }}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            {% endspaceless %}

        </div>

        <div class="col-lg-8 col-offset-2">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
                {{ form_widget(form._token) }}
                <p><b>{{ form_label(form.username, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.username, {'attr': {'class': 'form-control input-small', 'placeholder' : 'Username'}}) }}
                </p>
                <p><b>{{ form_label(form.email, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control input-small', 'placeholder' : 'someone@email.com'}}) }}
                </p>
                <p><b>{{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-small'}}) }}
                </p>
                <p><b>{{ form_label(form.plainPassword.second, "Re-Type Your Password: ", {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-small'}}) }}
                </p>
                <p><b>{{ form_label(form.birthdate, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.birthdate, {'attr': {'class': 'form-control input-small'}}) }}
                </p>
                <p><b>{{ form_label(form.avatar, "Avatar (URL): ", {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.avatar, {'attr': {'class': 'form-control input-small'}}) }}
                </p>
                <p><b>{{ form_label(form.country, null, {'label_attr': {'class': 'font-bold'}}) }}</b>
                    {{ form_widget(form.country, {'attr': {'class': 'form-control input-small'}}) }}
                </p>
                <p>
                    {{ form_widget(form.newsletter, {'attr': {'class': 'form-control input-small'}}) }}
                    I pretend to receive e-mails about Animes that i watch and alerts for new episodes.
                </p>
                <br>
                <div class="pull-right"><button class="btn btn-success btn-small pull-right">Sign Up</button>&nbsp;&nbsp;</div>
            </form>
        </div>
